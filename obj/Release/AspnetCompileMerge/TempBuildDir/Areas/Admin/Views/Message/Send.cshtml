
@{
    ViewBag.Title = "Send";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Send Message to users</h2>

<form action="@Url.Action("Send" , "Message" , new { area="Admin"})" method="post">
    <div class="form-group">
        <textarea class="form-control" placeholder="Enter Your message" name="text"></textarea>
        <button class="btn btn-success">Send <i class="glyphicon glyphicon-send"></i> </button>
    </div>
</form>

