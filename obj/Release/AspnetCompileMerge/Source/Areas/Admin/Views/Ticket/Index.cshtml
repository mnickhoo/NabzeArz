@model List<NabzeArz.Models.ticketModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th>عنوان</th>
            <td>نوع</td>
            <th>کاربر</th>
            <th>وضعیت</th>
            <th>توضیحات</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var ticket in Model)
        {
            <tr>
                <td>
                    @ticket.title
                </td>
                <td>
                    @ticket.type
                </td>
                <td>
                    @ticket.user.name
                </td>
                <td>
                    @ticket.status
                </td>
                <td>
                    @ticket.description
                </td>
            </tr>
        }
    </tbody>
</table>

